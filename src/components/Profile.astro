---
import { Icon } from "astro-icon/components";
import ProfileImage from "../assets/demo-avatar.png";
import { Image } from 'astro:assets';
import { siteConfig } from "../config";

---

<!-- 补一个 mb-4 -->
<div class="rounded-2xl bg-[var(--card-bg)] p-3">
    <!-- absolute z-40 才能让 Icon 显示在 Image 之上 -->
    <!-- 另外 Image 会自动缩放图像，当我放入 banner 时，会按照宽度缩放成合适的大小 -->
    <a href="/about/" class="flex items-center justify-center group mb-2.5">
        <Icon name="fa6-regular:address-card" class={`absolute group-hover:scale-100 
        text-white text-5xl scale-90 opacity-0 group-hover:opacity-100 
        group-active:scale-95 z-40 transition-all`}></Icon>
        <Image src={ProfileImage} alt="" class={`rounded-2xl group-hover:brightness-75 
        group-active:brightness-50 group-active:scale-95 transition-all`}/>
    </a>

    <!-- 照片外的部分 -->
    <div>
        <p class="font-bold text-lg text-center text-neutral-900 dark:text-neutral-50 mb-1">
            {siteConfig.subtitle}
        </p>
        <!-- 横杠 -->
        <div class="h-1 w-5 bg-[var(--primary)] mx-auto rounded-full mb-2"></div>
    </div>
</div>
