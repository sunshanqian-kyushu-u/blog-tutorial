---
import { Icon } from "astro-icon/components";
import { siteConfig } from "../config"
---

<a href={siteConfig.bannerlink} target="_blank" class="flex items-center group w-max bg-black/60 
rounded-full px-3 h-9 hover:bg-black/70 hover:pr-8 active:bg-black/80 md:mr-0 mr-4 md:scale-100 scale-95 transition-all">
    <Icon name="material-symbols:copyright-outline-rounded" class={`text-[1.25rem] mr-1 
    text-white/75`}></Icon>
    <p class="text-xs text-white/75">{siteConfig.bannerCredit}</p>
    <Icon name="fa6-solid:arrow-up-right-from-square" class={`absolute md:right-4 right-3.5 text-[0.75rem] 
    text-[oklch(0.75_0.14_var(--hue))] invisible group-hover:visible opacity-0 
    group-hover:opacity-100 transition-all`}></Icon>
</a>
